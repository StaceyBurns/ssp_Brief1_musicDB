extends layout

block content
    div.row
      div.col-sm-12
        h1 My Playlists
    div.row
      div.col-sm-2.col-sm-offset-10
        a(href='/admin/createPlaylist') Create a new playlist
    div.row
      div.col-sm-12
        for playlist, i in playlists
          div.row
            div.col-sm-8.col-sm-offset-2
              p 
                small #{new Date(playlist.date).toLocaleDateString()}
              p 
                a(href='/admin/playlist' +playlist.id) #{playlist.text}
          div.row
            div.col-sm-1.col-sm-offset-2
              a(href='/admin/delete/' +playlist.id) Delete
            div.col-sm-1
              a(href='/admin/edit?id=' +playlist.id) Edit