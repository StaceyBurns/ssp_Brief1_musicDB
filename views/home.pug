extends layout

block content
  h1= title
        div
            h1 Home
            form(method='POST', action='/login')
                p Add new playlist
                input(type='submit', value='Add playlist' name='addPlaylist')
                br 
                p Logout
                input(type='submit', value='Log out' name='logout')
        div
            for playlist, i in playlists
                div
                    p #{playlist.name}
